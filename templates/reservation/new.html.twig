{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"><i class="bi bi-calendar-plus"></i> Nouvelle réservation</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            <label class="form-label">Date et heure de réservation</label>
                            {{ form_widget(form.dateReservation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateReservation) }}
                            <div class="form-text">Choisissez la date et l'heure souhaitées pour votre réservation.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre de personnes</label>
                            {{ form_widget(form.nbPersonnes, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nbPersonnes) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Statut</label>
                            {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.statut) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_client_dashboard') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour au dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Créer la réservation
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}