{% extends 'base.html.twig' %}

{% block title %}Welcome to Resto!{% endblock %}

{% block body %}
    {# Navbar avec logo et panier #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="{{ asset('images/logo/logo.png') }}" alt="Resto Logo" class="img-fluid" style="max-height:100px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" href="#food">Food</a></li>
                    <li class="nav-item"><a class="nav-link" href="#drink">Drink</a></li>
                    <li class="nav-item"><a class="nav-link" href="#search">Search</a></li>
                    <li class="nav-item me-3">
                        <a class="btn btn-outline-primary position-relative" href="{{ path('cart') }}">
                            <i class="bi bi-cart"></i> Cart
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                {{ cart|length|default(0) }}
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        {% if app.user %}
                            <a class="btn btn-primary text-white" href="{{ path('app_client_dashboard') }}">Mon Dashboard</a>
                        {% else %}
                            <a class="btn btn-primary text-white" href="{{ path('app_login') }}">Login</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {# Carrousel #}
    <div id="carouselResto" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('images/food/pizza.jpg') }}" class="d-block w-100" alt="Delicious Food">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Delicious Food</h2>
                    <p>Discover our special dishes every day!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('images/drink/coffee.jpg') }}" class="d-block w-100" alt="Refreshing Drinks">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Refreshing Drinks</h2>
                    <p>Enjoy a variety of beverages!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('images/food/burger.jpg') }}" class="d-block w-100" alt="Cozy Atmosphere">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Cozy Atmosphere</h2>
                    <p>Relax and enjoy your meal.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselResto" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselResto" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    {# Food Section #}
    <section id="food" class="container py-5">
        <h2 class="mb-4 text-center">Food Menu</h2>
        <div class="row g-4">
            {% for food in foods %}
                <div class="col-md-4">
                    <div class="card shadow-sm hover-zoom">
                        <img src="{{ asset('images/food/' ~ food.image) }}" class="card-img-top" alt="{{ food.name }}">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ food.name }}</h5>
                            <p class="card-text">Price: ${{ food.price }}</p>
                            <a href="{{ path('cart_add', {'name': food.name, 'price': food.price}) }}" class="btn btn-success mt-2 w-100">
                                Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    {# Drink Section #}
    <section id="drink" class="bg-light py-5">
        <div class="container">
            <h2 class="mb-4 text-center">Drinks</h2>
            <div class="row g-4">
                {% for drink in drinks %}
                    <div class="col-md-3">
                        <div class="card shadow-sm hover-zoom">
                            <img src="{{ asset('images/drink/' ~ drink.image) }}" class="card-img-top" alt="{{ drink.name }}">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ drink.name }}</h5>
                                <p>Price: ${{ drink.price }}</p>
                                <a href="{{ path('cart_add', {'name': drink.name, 'price': drink.price}) }}" class="btn btn-success mt-2 w-100">
                                    Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Search Section avec filtres #}
    <section id="search" class="container py-5">
        <h2 class="mb-3 text-center">Search Your Favorite Dish</h2>
        <form class="row g-3 justify-content-center mb-4" action="{{ path('home') }}" method="GET" style="max-width:800px;margin:auto;">
            <div class="col-md-4">
                <input class="form-control" type="search" name="q" placeholder="Search food or drink..." value="{{ app.request.query.get('q') }}">
            </div>
            <div class="col-md-2">
                <select class="form-select" name="category">
                    <option value="">All Categories</option>
                    <option value="food" {% if app.request.query.get('category')=='food' %}selected{% endif %}>Food</option>
                    <option value="drink" {% if app.request.query.get('category')=='drink' %}selected{% endif %}>Drink</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" name="alphabetical">
                    <option value="">Alphabetical</option>
                    <option value="asc" {% if app.request.query.get('alphabetical')=='asc' %}selected{% endif %}>A → Z</option>
                    <option value="desc" {% if app.request.query.get('alphabetical')=='desc' %}selected{% endif %}>Z → A</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" name="price">
                    <option value="">Price</option>
                    <option value="low" {% if app.request.query.get('price')=='low' %}selected{% endif %}>Low → High</option>
                    <option value="high" {% if app.request.query.get('price')=='high' %}selected{% endif %}>High → Low</option>
                </select>
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-success" type="submit">Search</button>
            </div>
        </form>

        {# Résultats filtrés #}
        <div class="row g-4">
            {% for item in results %}
                <div class="col-md-3">
                    <div class="card shadow-sm hover-zoom">
                        {% if item.image in ['pizza.jpg','burger.jpg','pasta.jpg'] %}
                            <img src="{{ asset('images/food/' ~ item.image) }}" class="card-img-top" alt="{{ item.name }}">
                        {% else %}
                            <img src="{{ asset('images/drink/' ~ item.image) }}" class="card-img-top" alt="{{ item.name }}">
                        {% endif %}
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ item.name }}</h5>
                            <p>Price: ${{ item.price }}</p>
                            <a href="{{ path('cart_add', {'name': item.name, 'price': item.price}) }}" class="btn btn-success mt-2 w-100">
                                Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">No results found.</p>
            {% endfor %}
        </div>
    </section>

    {# Hover effect #}
    <style>
        .hover-zoom:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }
    </style>

{% endblock %}
